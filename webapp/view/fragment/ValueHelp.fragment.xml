<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">


    <TableSelectDialog confirm=".onCloseDialog" cancel=".onCloseDialog" title="Select Customer" items="{
            path : 'helper>/helpList'
           
        }" search=".handleSearch">

        <ColumnListItem selected="{selected}">
            <cells>

                <Text text="{helper>customerName}" />
                <ObjectIdentifier title="{helper>customer}" />
                <Text text="{helper>email}" />
                <Text text="{helper>mobile}" />

            </cells>
        </ColumnListItem>
        <columns>
            <Column>
                <header>
                    <Text text="Customer Name" />
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="ID" />
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="Email" />
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="Mobile" />
                </header>
            </Column>
        </columns>
    </TableSelectDialog>


</core:FragmentDefinition>