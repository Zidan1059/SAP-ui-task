<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:m="sap.m"
    xmlns:header="sap.ui.task.SharedBlocks.header"
    xmlns:items="sap.ui.task.SharedBlocks.items"
    controllerName="sap.ui.task.controller.Main"
>
    <ObjectPageLayout id="ObjectPageLayout"
        upperCaseAnchorBar="false">


        <sections>

            <ObjectPageSection titleUppercase="false" id="headerSection" title="Header">


                <subSections>
                    <ObjectPageSubSection id="headerSectionSS1">
                        <blocks>
                            <header:HeaderBlock id="headerblock" />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>


            <ObjectPageSection titleUppercase="false" id="employmentSection" title="Employment">
                <subSections>
                    <ObjectPageSubSection id="itemsSectionSSsss1">
                        <blocks>
                            <items:ItemsBlock id="itemsblock" />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>

    </ObjectPageLayout>


</mvc:View>