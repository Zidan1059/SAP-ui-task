<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    controllerName="sap.ui.task.controller.Main"
>
    <ObjectPageLayout id="ObjectPageLayout"
        upperCaseAnchorBar="false">


        <sections>

            <ObjectPageSection titleUppercase="false" id="headerSection" title="Header">


                <subSections>
                    <ObjectPageSubSection id="headerSectionSS1">
                        <blocks>
                            <mvc:XMLView id="headerView"
                                viewName="sap.ui.task.view.HeaderBlock" />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>


            <ObjectPageSection titleUppercase="false" id="employmentSection" title="Items">
                <subSections>
                    <ObjectPageSubSection id="itemsSectionSSsss1">
                        <blocks>
                            <mvc:XMLView id="itemView"
                                viewName="sap.ui.task.view.ItemsBlock" />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>

    </ObjectPageLayout>


</mvc:View>